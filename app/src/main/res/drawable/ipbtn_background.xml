<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="2dp"
        android:left="2dp"
        >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#D4CACA"
                android:endColor="#686060"/>
            <corners android:radius="16dip"/>

        </shape>
    </item>
    <item
        android:right="2dp"
        android:bottom="2dp"
        >
        <shape android:shape="rectangle">
        <solid android:color="#3B8CDE"/>
            <corners android:radius="16dip"/>

        </shape>
    </item>
</layer-list>