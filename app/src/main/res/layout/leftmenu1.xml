<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/query_park_iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            style="@style/MenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/query_park_iv_one"
            android:text="@string/its"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/query_park_iv_one" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp">

    </ListView>

    <RelativeLayout
        android:id="@+id/layout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/query_park_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set"
            android:contentDescription="@string/set"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/two_tv_one_bus"
            style="@style/MenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set"

            android:layout_marginRight="88dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>